{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "element",
    "description": "The base element.",
    "type": "object",
    "allOf": [
        { "$ref": "#/definitions/identifiable" }
    ],
    "properties": {
        "material": {"$ref": "#/definitions/material"}
    },
    "required": ["id", "material"],
    "additionalProperties": false,
    "definitions" : {
        "identifiable": {
            "description": "An identifiable object.",
            "type": "object",
            "properties": {
                "id": {"type": "string"}
            },
            "required": ["id"],
            "additionalProperties": false
        },
        "element": {
            
        },
        "material": {
            "description": "An RGB material using the PBR model.",
            "type": "object",
            "allOf": [
                { "$ref": "#/definitions/identifiable" }
            ],
            "properties": {
                "red": {"type": "number", "description": "The red component of the color.", "minimum": 0.0, "maximum": 1.0},
                "green": {"type": "number", "description": "The green component of the color.", "minimum": 0.0, "maximum": 1.0},
                "blue": {"type": "number", "description": "The blue component of the color.", "minimum": 0.0, "maximum": 1.0},
                "alpha": {"type": "number", "description": "The alpha component (transparency) of the color.", "minimum": 0.0, "maximum": 1.0},
                "glossinessFactor": {"type": "number", "description": "The glossiness factor.", "minimum": 0.0, "maximum": 1.0},
                "specularFactor": {"type":"number", "description": "The specular factor.", "minimum": 0.0, "maximum": 1.0}
            },
            "required": ["red, green, blue, alpha, glossinessFactor, specularFactor"],
            "additionalProperties": false
        }
    }
}